<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AppointmentDetailFragment">

    <LinearLayout
        android:id="@+id/linearlayoutappointment"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginEnd="20px"
        android:layout_marginBottom="20px">

        <TextView
            android:id="@+id/idTextViewDietitianFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:layout_marginLeft="20px"

            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTextViewDietitianLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTextViewDietitianFirstName"
            android:padding="10px"

            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTextViewDietitianPatronymic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTextViewDietitianLastName"
            android:padding="10px"

            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayoutappointment2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="0px"
        android:layout_marginLeft="25px"
        android:layout_below="@+id/linearlayoutappointment"
        android:layout_marginBottom="0px">

        <TextView
            android:id="@+id/idTextViewDietitianEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#d9554e"
            android:textStyle="normal"

            android:textSize="12sp"
            android:layout_below="@+id/linearlayoutappointment"
            android:layout_marginLeft="55px" />

        <TextView
            android:id="@+id/idTextViewDietitianPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="?android:textColorPrimary"
            android:textStyle="normal"
            android:textSize="12sp"
            android:layout_marginRight="65px"
            android:layout_marginLeft="0px"

            android:layout_below="@+id/linearlayoutappointment"
            android:gravity="right" />
    </LinearLayout>

    <TextView
        android:id="@+id/idTextViewDietitianRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:textSize="14sp"

        android:layout_below="@+id/linearlayoutappointment"
        android:justificationMode="inter_word"
        android:padding="57px"
        android:layout_marginTop="20px"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDishes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idTextViewDietitianRecommendation"
        android:layout_marginTop="0dp" />

</RelativeLayout>